<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.luvie.luvieapps.OpsiBayarActivity">

    <Button
        android:id="@+id/btn_bayar_konsultasi_opsi_bayar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/background_button_green"
        android:layout_alignParentBottom="true"
        android:text="Bayar Konsultasi"
        android:fontFamily="@font/robotobold"
        android:textSize="17sp"/>

    <LinearLayout
        android:id="@+id/linear_opsi_bayar"
        android:layout_above="@+id/btn_bayar_konsultasi_opsi_bayar"
        android:layout_marginBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/img_back_opsi_bayar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/robotobold"
                android:text="Opsi bayar"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_nama_kategori_opsi_bayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotobold"
            android:text="Nama kategori bayar"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_opsi_bayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp" />

    </LinearLayout>

</RelativeLayout>