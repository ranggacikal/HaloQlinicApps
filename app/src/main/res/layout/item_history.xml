<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_history"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp">

            <LinearLayout
                android:id="@+id/linear_id_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Transaksi : "
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:fontFamily="@font/robotoreguler"/>

                <TextView
                    android:id="@+id/text_item_id_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/robotoreguler"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_item_nama_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_id_transaksi"
                android:text="Nama Produk"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/text_item_harga_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0.000"
                android:layout_below="@+id/text_item_nama_history"
                android:textSize="14sp"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/red"/>

            <LinearLayout
                android:layout_below="@+id/text_item_harga_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_item_status_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/robotobold"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>