<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".DetailDokterActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_detail_dokter"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/img_back_detail_dokter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_arrow_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="250dp"
                android:background="@drawable/background_white_30">

                <TextView
                    android:id="@+id/text_nama_detail_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Dokter"
                    android:textColor="@color/red"
                    android:textSize="36sp"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/text_spesialis_detail_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Dokter"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/img_chat_detail_dokter"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_chat"/>

                    <ImageView
                        android:id="@+id/img_vc_detail_dokter"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_video_call"
                        android:layout_marginStart="20dp"/>
                    
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang Dokter"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoblack"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/text_tentang_detai_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/red"
                    android:textSize="11sp"
                    android:text="@string/lorem_ipsum"
                    android:fontFamily="@font/robotoreguler"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Jadwal Konsultasi"
                    android:textColor="@color/red"
                    android:textSize="14sp"
                    android:fontFamily="@font/robotoblack"
                    android:layout_marginTop="10dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_jadwal_detail_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_chat_detail_dokter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/background_button_red"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        android:text="Konsultasi"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/robotobold"/>

                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>