<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id Transaksi :"
                android:fontFamily="@font/robotoreguler"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/text_item_id_transaksi_resep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Id Transaksi"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Dokter :"
                android:fontFamily="@font/robotoreguler"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/text_item_nama_dokter_resep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Konsultasi :"
                android:fontFamily="@font/robotoreguler"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/text_item_jadwal_resep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal"
                android:fontFamily="@font/robotobold"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:textSize="13sp"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>