<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_white_30">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konsultasi mana yang kamu inginkan ?"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/robotobold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"/>

    <RelativeLayout
        android:id="@+id/relative_konsultasi_sekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/img_konsultasi_sekarang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_konsultasi_sekarang"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_konsultasi_sekarang"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Konsultasi sekarang"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotobold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai konsultasi sekarang"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoreguler"/>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_buat_jadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">

        <ImageView
            android:id="@+id/img_buat_jadwal"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_buat_jadwal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_buat_jadwal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat Jadwal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotobold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buat jadwal konsultasi untuk nanti"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoreguler"/>

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>