<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_dokter_atur_jadwal"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_nama_atur_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Dokter"
                android:maxWidth="300dp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotobold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/text_spesialis_atur_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="spesialis"
                android:fontFamily="@font/robotoreguler"
                android:layout_marginTop="7dp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/text_harga_atur_jadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoreguler"
                android:layout_marginTop="7dp"
                android:textSize="19sp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>